{#
 # Meta atom
 #
 # @param text {string} The text of the button
 # @param id {string|null} ID attr value
 #
 #
 # @param attrs {object|null} HTML attrs for outer HTML element
 # @param modifiers {array|null} BEM modifier handles for outer HTML element
  (will be prefixed with Base class)
 # @param data {object|null} HTML data attrs (no data- prefix, camelcased)
 # @param href {string|null} href attr value
 # @extends @atom
 #}

{# Custom props #}
{%- set icon = icon | default(null) -%}
{%- set type = type | default(null) -%}

{# Default props #}
{%- set el = el | default('span') -%}
{%- if type -%}
  {%- set el = 'button' -%}
{%- endif -%}
{%- set id = id | default(null) -%}
{%- set attrs = attrs | default({}) -%}
{%- set classList = classList | default([]) -%}
{#- BEM modifier classes -#}
{%- set modifiers = modifiers | default([]) -%}
{#- Data attrs -#}
{%- set data = data | default({}) -%}
{%- if href | default(false) -%}
  {%- set attrs = attrs | merge({ href: href }) -%}
{%- endif -%}

{%- if type -%}
  {%- set attrs = attrs | merge({ type: type }) -%}
{%- endif -%}

{%- set config = {} -%}

{%- for prop in ['attrs', 'data', 'classList', 'modifiers', 'id', 'el', 'href']  -%}
  {%- set config = config | merge({(prop): _context[prop] }) -%}
{%- endfor -%}

{% embed 'atoms/_base.twig' with config | merge({
    baseClass: 'meta',
    content: text
  }) %}
{% endembed %}
