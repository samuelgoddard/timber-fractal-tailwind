{#
 # Btn atom
 #
 # @param text {string} The text of the button
 # @param id {string|null} ID attr value
 # @param modifiers {array|null} BEM modifier handles for outer HTML element
 # @param href {string|null} href attr value
 #}


<a
	href="{{ href }}"
	class="btn{% if classList is defined and classList %}{% for class in classList %} {{ class }}{% endfor %}{% endif %}{% if modifiers is defined and modifiers %}{% for modifier in modifiers %} btn--{{ modifier }}{% endfor %}{% endif %}"
>
	{{ text }}
</a>
