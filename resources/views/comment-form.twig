
<form method="post" action="{{ site.wp_link }}/wp-comments-post.php" class="w-full">
  {% if user %}
    <input type="hidden" name="author" value="{{ user.name }}">
    <input type="hidden" name="email" value="{{ user.email }}">
    <input type="hidden" name="url" value="{{ user.link }}">
  {% else %}
    <div class="flex flex-wrap overflow-hidden md:-mx-3">
    {# Name input field #}
      <div class="w-full md:w-1/3 md:px-3">
        <label class="label text-sm block mb-1" for="author">Name <span class="required">*</span></label>
        <input class="input block w-full p-3 mb-3 border border-grey-base" type="text" id="author" name="author" required>
      </div>

      {# Email input field #}
      <div class="w-full md:w-1/3 md:px-3">
        <label class="label text-sm block mb-1" for="email">Email <span class="required">*</span></label>
        <input class="input block w-full p-3 mb-3 border border-grey-base" type="email" id="email" name="email" required>
      </div>

      {# Website input field #}
      <div class="w-full md:w-1/3 md:px-3">
        <label class="label text-sm block mb-1" for="url">Website</label>
        <input class="input block w-full p-3 mb-3 border border-grey-base" type="text" id="url" name="url">
      </div>
    </div>
  {% endif %}

  {# Comment input field #}
  <label class="label text-sm block mb-1" for="comment">Comment</label>
  <textarea
    class="textarea block w-full border border-grey-base p-3 mb-3"
    id="comment"
    name="comment"
    placeholder="comment"></textarea>

  <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
  <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

  {# Form Buttons #}
  <div class="md:flex md:flex-wrap md:-mx-2 overflow-hidden">
    <div class="px-2">
      <input type="submit" name="Submit" class="button is-primary" value="Post Comment"/>
    </div>
    <div class="px-2">
      <input type="reset" class="button is-light" value="Reset"/>
    </div>
    <div class="px-2">
      {{ cancel_link }}
    </div>
  </div>
</form>
